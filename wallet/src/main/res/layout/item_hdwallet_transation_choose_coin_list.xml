<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/iv_hdwallet_transation_choose_list_coin_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:src="@drawable/resources_img_investment_btc" />

    <TextView
        android:id="@+id/tv_hdwallet_transation_choose_list_coin_name"
        style="@style/secondaryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/iv_hdwallet_transation_choose_list_coin_logo"
        android:text="BTC" />

    <TextView
        android:id="@+id/tv_hdwallet_transation_choose_list_coin_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hdwallet_transation_choose_list_coin_name"
        android:layout_alignStart="@id/tv_hdwallet_transation_choose_list_coin_name"
        android:text="余额:0" />

    <ImageView
        android:id="@+id/iv_hdwallet_transation_choose_list_coin_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:src="@drawable/resources_img_icon_selected" />
</RelativeLayout>