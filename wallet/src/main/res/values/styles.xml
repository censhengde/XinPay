<resources>

    <style name="HDWalletCreateFragment_view">
        <item name="android:background">#fff</item>
    </style>

    <style name="HDWalletCreateFragment_et" parent="HDWalletCreateFragment_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textColorHint">#B4B4AEAE</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HDWalletCreateFragment_tv" parent="HDWalletCreateFragment_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HDWalletCreateFragment_explain_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@drawable/resources_img_proof_oval</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">#7A464040</item>
    </style>

    <style name="HDWalletCreateFragment_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="hdwallet_radio_button" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="HDWalletSendFragment_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/viewBackgound</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>

    </style>
</resources>
