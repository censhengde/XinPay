<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ringle.wallet.ui.HDWalletCreateFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/btn_create_wallet_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/resources_img_nav_navback"
            android:tint="@color/colorPrimaryDark"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="创建钱包"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#228B8585"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/resources_img_proof_oval"
            android:drawablePadding="5dp"
            android:text="密码用于加密保护私钥,以及转账等,所以强度非常重要."
            android:textColor="#7A464040" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/resources_img_proof_oval"
            android:drawablePadding="5dp"
            android:text="XinPay不存储密码,也无法帮您找回,请务必牢记"
            android:textColor="#7A464040" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="设置密码"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#228B8585" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@null"
        android:hint="不少于8位包含英文,数字密码"
        android:padding="15dp"
        android:textColorHint="#B4B4AEAE"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#228B8585" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="确认密码"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#228B8585" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@null"
        android:hint="确认钱包密码"
        android:padding="15dp"
        android:textColorHint="#B4B4AEAE"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#228B8585" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:text="助记词类型"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_mnemonic_word_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:drawableEnd="@drawable/resources_img_icon_right_arrow"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="英文单词"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#228B8585" />

    <androidx.appcompat.widget.AppCompatCheckedTextView
        android:id="@+id/ctv_is_agreed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/resources_img_credittrade_checked"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="@string/ctv_is_agreed" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#228B8585" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/colorPrimary"
        android:text="创建钱包"
        android:textColor="#fff"
        android:textSize="18sp" />


</androidx.appcompat.widget.LinearLayoutCompat>
