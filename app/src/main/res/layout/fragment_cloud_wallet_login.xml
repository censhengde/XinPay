<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cloud_login_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/resources_img_cloud_cloud_login"
        android:drawablePadding="15dp"
        android:gravity="center"
        android:text="@string/login_cloud"
        android:layout_marginTop="80dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_login_cloud_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cloud_login_default"
        android:layout_margin="10dp"
        android:text="私钥存储在云端,保存在银行级加密硬件中" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_login_cloud_tip"
        android:background="@color/colorPrimary"
        android:layout_margin="20dp"
        android:textSize="14sp"
        android:text="登录"
        android:textColor="#fff" />


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还没有注册账号?立即去注册"
        android:layout_margin="10dp"/>


</androidx.appcompat.widget.LinearLayoutCompat>