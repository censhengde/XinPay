<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="style_action_bar_center_title" parent="primaryTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="style_action_bar_left_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">15dp</item>

    </style>
    <style name="style_action_bar_right_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">15dp</item>

    </style>
    <!--一级标题-->
    <style name="primaryTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <!--二级标题-->
    <style name="secondaryTitle" parent="primaryTitle">
        <item name="android:textSize">16sp</item>
    </style>
    <!--三级标题-->
    <style name="level_3_title" parent="primaryTitle">
        <item name="android:textSize">12sp</item>
    </style>
    <!--正文内容-->
    <style name="body_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#7A464040</item>

    </style>
</resources>
